{
  "name": "react-boilerplate",
  "version": "2.2.0",
  "description": "A slightly opinionated yet dead simple boilerplate for ReactJS",
  "scripts": {
    "start": "npm run prod",
    "dev": "npm run build:dev && npm run start-dev-server",
    "prod": "npm run build:prod && npm run start-server",
    "build:dev": "cross-env NODE_ENV=development webpack --progress --colors",
    "build:prod": "cross-env NODE_ENV=production webpack --progress --colors",
    "linter": "eslint src -f html --ext .jsx --ext .js -o lint-report.html",
    "test": "istanbul cover ./node_modules/mocha/bin/_mocha --report lcovonly -- -R spec && cat ./coverage/lcov.info | ./node_modules/coveralls/bin/coveralls.js && rm -rf ./coverage",
    "start-dev-server": "cross-env NODE_ENV=development node server.js",
    "start-server": "cross-env NODE_ENV=production node server.js"
  },
  "author": "Mike Chabot",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mikechabot/react-boilerplate.git"
  },
  "bugs": {
    "url": "https://github.com/mikechabot/react-boilerplate/issues"
  },
  "dependencies": {
    "autoprefixer": "^6.3.6",
    "axios": "^0.15.2",
    "babel-core": "^6.18.2",
    "babel-loader": "^6.2.7",
    "babel-polyfill": "^6.3.14",
    "babel-preset-es2015": "^6.18.0",
    "babel-preset-react": "^6.0.15",
    "babel-preset-stage-0": "^6.0.15",
    "coveralls": "^2.11.15",
    "cross-env": "^3.1.3",
    "css-loader": "^0.26.0",
    "del": "^2.2.0",
    "eslint": "^3.10.2",
    "eslint-config-standard": "^6.2.1",
    "eslint-loader": "^1.6.1",
    "eslint-plugin-promise": "^3.4.0",
    "eslint-plugin-react": "^6.7.1",
    "eslint-plugin-standard": "^2.0.1",
    "expect": "^1.13.4",
    "express": "^4.13.4",
    "extract-text-webpack-plugin": "^1.0.1",
    "file-loader": "^0.9.0",
    "html-webpack-plugin": "^2.24.1",
    "istanbul": "^1.0.0-alpha.2",
    "jsdom": "^9.8.3",
    "json-loader": "^0.5.4",
    "lodash": "^4.16.6",
    "mocha": "^3.1.2",
    "moment": "^2.15.2",
    "node-sass": "^3.11.2",
    "postcss-loader": "^1.1.0",
    "react": "^15.4.1",
    "react-addons-test-utils": "^15.4.1",
    "react-dom": "^15.4.1",
    "react-hot-loader": "^3.0.0-beta.6",
    "react-redux": "^4.4.6",
    "react-router": "^2.0.0",
    "redux": "^3.3.1",
    "redux-entity": "^2.0.0",
    "redux-logger": "^2.7.4",
    "redux-mock-store": "^1.0.2",
    "redux-thunk": "^2.0.1",
    "sass-loader": "^4.0.2",
    "sinon": "^1.17.3",
    "style-loader": "^0.13.0",
    "svg-react-loader": "^0.3.2",
    "url-loader": "^0.5.7",
    "webpack": "^1.13.3",
    "webpack-dev-server": "^1.12.1"
  }
}
